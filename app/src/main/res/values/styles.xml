<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:tint">#ffffff</item>
    </style>
    <style name="ChipTextStyle_Selected">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="MaterialFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="tint">#ffffff</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="TextAppearance.Subtitle" parent="TextAppearance.Title" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>